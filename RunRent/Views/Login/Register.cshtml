@using System.Web.Optimization

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@model RunRent.Domain.Entities.User.UDbTable


@{
    ViewBag.Title = "Sign Up";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800;900&display=swap"
          rel="stylesheet" />
    <title>Sign up</title>
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/main/css")

</head>
<body>


    <div class="panel panel-filled">
        <div class="panel-body d-flex justify-content-center align-items-center" style="height: 100vh">
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { @id = "LoginForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new
                    {
                        placeholder = "example@gmail.com",
                        title = "Please enter email",
                        value = "",
                        name = "email",
                        id = "email",
                        @class = "form-control"
                    })
                    <span class="help-block small">Your unique username to app</span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Username, new
                    {
                        placeholder = "username",
                        title = "Please enter username",
                        value = "",
                        name = "username",
                        id = "username",
                        @class = "form-control"
                    })
                    <span class="help-block small">Your unique username to app</span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Password, new
                    {
                        @class = "form-control",
                        type = "password",
                        title = "Please enter your password",
                        placeholder = "******",
                        value = "",
                        name = "password",
                        id = "password",
                        autocomplete = "off"
                    })
                    <span class="help-block small">Your strong password</span>
                </div>


                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success btn-block btn-lg" style="background-color: var(--main);" value="Register">Sign up</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">
                    Have already an account?
                    <a href="@Url.Action("Index", "Login")" class="fw-bold text-body">
                        <span style="text-decoration: underline;">Sign in</span>
                    </a>
                </p>

            }
        </div>
    </div>





    <div class="container">
        <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
                <h2 class="text-center mb-5">Create an account</h2>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-4">
                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-success btn-block btn-lg" style="background-color: var(--main);" value="Register">Sign up</button>
                    </div>

                    <p class="text-center text-muted mt-5 mb-0">
                        Have already an account?
                        <a href="@Url.Action("Index", "Login")" class="fw-bold text-body">
                            <span style="text-decoration: underline;">Sign in</span>
                        </a>
                    </p>
                }
            </div>
            </div>
        </div>



</body>
</html>



